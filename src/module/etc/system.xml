<config>
    <sections>
        <web>
            <groups>
                <url>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <use_store>
                            <show_in_default>0</show_in_default>
                            <show_in_store>0</show_in_store>
                            <show_in_website>0</show_in_website>
                        </use_store>
                        <use_code translate="label" module="ecomdev_customstorecode">
                            <label>Add Custom Code for Store in this Website</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_code>
                        <code translate="label" module="ecomdev_customstorecode">
                            <label>Custom Url Code for Current Store</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </code>
                        <cookie_domain_secure translate="label" module="ecomdev_customstorecode">
                            <label>Cookie Domain</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cookie_domain_secure>
                        <cookie_domain_unsecure translate="label" module="ecomdev_customstorecode">
                            <label>Cookie Domain Unsecure</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cookie_domain_unsecure>
                    </fields>
                </url>
                <unsecure>
                    <fields>
                        <alternative_base_url translate="label" module="ecomdev_customstorecode">
                            <label>Alternative Base Url</label>
                            <comment>Can be used to provide alternative url for reaching the frontend. For instance different domain for technical communication.</comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </alternative_base_url>
                    </fields>
                </unsecure>
            </groups>
        </web>
    </sections>
</config>
